generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("PG_URL")
}

model Token {
  id          String  @default(cuid()) @id
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt @default(now())
  user        User
}

model Connection {
  id          String  @default(cuid()) @id
  instanceId  String?
  ipHash      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt @default(now())
  user        User?
  room     Room?
}

model User {
  id              String            @default(cuid()) @id
  name            String?
  avatar          String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt @default(now())
  profiles        Profile[]
}

model Profile {
  id     String  @default(cuid()) @id
  provider String
  serviceId String
  name   String?
  avatar String?
  email String?
  accessToken String?
  refreshToken String?
  user   User
}

model Room {
  id              String            @default(cuid()) @id
  name            String
  title           String 
  avatar          String?
  state           String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt @default(now())
  messages        RoomMessage[]
  connections     Connection[]
}

model RoomMessage {
  id          String  @default(cuid()) @id
  content     String
  deleted     Boolean @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt @default(now())
  room     Room
  user        User
}