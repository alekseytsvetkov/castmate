generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_URL")
}

model Token {
  id          String  @default(cuid()) @id
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt @default(now())
  user        User
}

model Connection {
  id          String  @default(cuid()) @id
  instanceId  String?
  ipHash      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt @default(now())
  user        User?
  channel     Channel?
}

model User {
  id              String            @default(cuid()) @id
  name            String?
  avatar          String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt @default(now())
  profiles        Profile[]
}

model Profile {
  id     String  @default(cuid()) @id
  provider String
  serviceId String
  name   String?
  avatar String?
  email String?
  accessToken String?
  refreshToken String?
  user   User
}

enum CommunityMode {
  WAITLIST
  COLLECTION
}

model Community {
  id              String            @default(cuid()) @id
  name            String            @unique
  title           String
  avatar          String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt @default(now())
  channels        Channel[]
  owner           User              @relation(fields: [ownerId], references: [id])
  ownerId         String
}

model Channel {
  id              String            @default(cuid()) @id
  name            String
  title           String
  avatar          String?
  state           String?
  mode            CommunityMode     @default(WAITLIST)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt @default(now())
  community       Community
  messages        ChannelMessage[]
  connections     Connection[]
}

model ChannelMessage {
  id          String  @default(cuid()) @id
  content     String
  deleted     Boolean @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt @default(now())
  channel     Channel
  user        User
}
